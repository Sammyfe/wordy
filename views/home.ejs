    <% posts.forEach(post =>{ %>
      <div class="row align-items-md-stretch">
        <div class="col-md-6">
          <div class="h-100 p-5 text-white bg-dark rounded-3">
          <!-- rapping this in ejs variable container -->
          <h2> <%= post.title %> </h2>
          <p> <%= post.snippet %> </p>
          <!-- we want to add an ejs variable in what we are doing -->
          <a class="btn btn-outline-light"
           type="button"
           href="/post/read/<%= post._id %>">Read more</a>
        </div>
      </div>
      </div>
    <%}) %>

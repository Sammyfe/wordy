<script>
 const postDelete = document.querySelector('#delete');
 const postId = postDelete.dataset.postId;
 postDelete.onclick = async function (){
   // return statement will not make the rest of our codes execute
    const request = await fetch(`/delete_post/${postId}`, {
      method: 'DELETE',
    });
    const response =await request.json();

    //if(request.ok){
     //response.redirect;
    //}
    if(response.status == true) {
      //how we redirect in js
      window.location.href = response.redirect;
    } else if (response.status == false)
    alert('could not delete that post');
  };
  
